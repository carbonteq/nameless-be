	"scripts": {
		"prepare": "husky",
		"tc": "tsc --noEmit --pretty --skipLibCheck",
		"fmt": "biome format src --write",
		"fmt:dry": "biome format src",
		"lint": "biome check src",
		"lint:fix": "biome check src --write --unsafe",
		"build": "nest build",
		"run:script": "nest start --entryFile",
		"start": "nest start",
		"start:swc": "nest start -b swc",
		"start:pretty": "nest start | pino-pretty",
		"start:dev": "nest start --watch",
		"start:dev:pretty": "nest start --watch | pino-pretty",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/web/server",
		"repl": "nest start --entryFile repl",
		"test": "jest",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r @swc-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"db:gen": "drizzle-kit generate --name",
		"db:mig": "dotenv -- drizzle-kit migrate",
		"db:check": "drizzle-kit check",
		"db:std": "drizzle-kit studio",
		"db:seed": "node -r tsconfig-paths/register -r @swc-node/register ./src/infra/db/drizzle/seed.ts"
	},
